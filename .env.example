# === Application ===
APP_NAME="HH Auth Service v2"
APP_VERSION="2.0.0"
ENVIRONMENT=production
DEBUG=false

# === Server ===
HOST=0.0.0.0
PORT=8000
APP_PORT=8000
WORKERS=4

# === Database ===
POSTGRES_USER=authuser
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=auth_service
POSTGRES_PORT=5432
# DATABASE_URL is auto-configured in docker-compose
# DATABASE_URL=postgresql+asyncpg://authuser:your_secure_password_here@postgres:5432/auth_service
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# === HeadHunter OAuth ===
HH_CLIENT_ID=your_client_id_here
HH_CLIENT_SECRET=your_client_secret_here
HH_APP_TOKEN=your_app_token_here
HH_REDIRECT_URI=http://127.0.0.1:5555/callback
HH_USER_AGENT="HH Resume Parser Auth Service/2.0 (your_email@example.com)"

# === Security ===
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_here
SESSION_EXPIRE_HOURS=720
EXCHANGE_CODE_EXPIRE_MINUTES=5
OAUTH_STATE_EXPIRE_MINUTES=10

# === Admin ===
ADMIN_USERNAME=admin
# Generate with: python -c "from passlib.hash import bcrypt; print(bcrypt.hash('your_password'))"
# IMPORTANT: Escape $ symbols in bcrypt hash by doubling them ($ -> $$) for Docker Compose compatibility
# Example: $2b$12$hash... should become $$2b$$12$$hash...
ADMIN_PASSWORD=your_bcrypt_hashed_password_here

# === Rate Limiting ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE=memory

# === Logging ===
LOG_LEVEL=INFO
LOG_FORMAT=json

# === CORS ===
CORS_ENABLED=false
CORS_ORIGINS=[]

# === Monitoring ===
METRICS_ENABLED=true
